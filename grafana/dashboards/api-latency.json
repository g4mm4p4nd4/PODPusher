{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "PODPusher API Latency & Performance Dashboard — monitors request latency, error rates, and throughput across all services.",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Request Latency (p50 / p95 / p99)",
      "description": "API request latency percentiles across all services.",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(pod_request_latency_seconds_bucket{service=~\"$service\"}[5m]))",
          "legendFormat": "p50 — {{service}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(pod_request_latency_seconds_bucket{service=~\"$service\"}[5m]))",
          "legendFormat": "p95 — {{service}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(pod_request_latency_seconds_bucket{service=~\"$service\"}[5m]))",
          "legendFormat": "p99 — {{service}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.2 },
              { "color": "red", "value": 0.3 }
            ]
          }
        }
      }
    },
    {
      "title": "Error Rate by Service",
      "description": "Rate of 5xx errors per service over the last 5 minutes.",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "targets": [
        {
          "expr": "rate(pod_request_total{status=~\"5..\", service=~\"$service\"}[5m])",
          "legendFormat": "{{service}} — {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "fixed", "fixedColor": "red" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50
          }
        }
      }
    },
    {
      "title": "Request Throughput",
      "description": "Requests per second by service and status.",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "targets": [
        {
          "expr": "sum(rate(pod_request_total{service=~\"$service\"}[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "title": "Error Budget (5xx %)",
      "description": "Percentage of requests resulting in 5xx errors. SLO target: < 1%.",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "targets": [
        {
          "expr": "100 * sum(rate(pod_request_total{status=~\"5..\", service=~\"$service\"}[15m])) / sum(rate(pod_request_total{service=~\"$service\"}[15m]))",
          "legendFormat": "5xx %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 10,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Rate Limiting (429 Responses)",
      "description": "Rate of 429 (Too Many Requests) responses.",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 16 },
      "id": 5,
      "targets": [
        {
          "expr": "rate(pod_request_total{status=\"429\", service=~\"$service\"}[5m])",
          "legendFormat": "{{service}} — 429",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "fixed", "fixedColor": "orange" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 40
          }
        }
      }
    },
    {
      "title": "Latency by Endpoint (Top 10)",
      "description": "Average latency for the top 10 slowest endpoints.",
      "type": "bargauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 16 },
      "id": 6,
      "targets": [
        {
          "expr": "topk(10, rate(pod_request_latency_seconds_sum{service=~\"$service\"}[5m]) / rate(pod_request_latency_seconds_count{service=~\"$service\"}[5m]))",
          "legendFormat": "{{path}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.2 },
              { "color": "red", "value": 0.3 }
            ]
          }
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["podpusher", "api", "performance", "latency"],
  "templating": {
    "list": [
      {
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": "Prometheus",
        "definition": "label_values(pod_request_total, service)",
        "includeAll": true,
        "label": "Service",
        "multi": true,
        "name": "service",
        "query": "label_values(pod_request_total, service)",
        "refresh": 2,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "API Latency & Performance",
  "uid": "podpusher-api-latency",
  "version": 1
}
